[core]
	editor = nvim
	preloadindex = true
	fscache = true
	autocrlf = input
	pager = delta
	safecrlf = false

[interactive]
	diffFilter = delta --color-only

[delta]
	light = false
	navigate = true
	side-by-side = true
	line-numbers = true
	file-style = bold yellow ul
	file-decoration-style = none
	hunk-header-style = file line-number syntax

[user]
	name = Nicolai Sattler
	email = nicolaisattler1990@gmail.com

[gc]
	auto = 256

[rerere]
	enabled = true

[merge]
	tool = nvimdiff
	conflictstyle = diff3

[mergetool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c '$wincmd w' -c 'wincmd J'

[mergetool "vscode"]
    cmd = code --wait $MERGED
    trustExitCode = false

[diff]
	tool = nvimdiff
	colorMoved = default

[init]
	defaultBranch = main

[alias]
	graphfull = log --graph --abbrev-commit --decorate --format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n\"\" %C(white)%s%C(reset) %C(dim white)- %an%C(reset)\" --all
	graph = log --graph --all --decorate --oneline --stat
